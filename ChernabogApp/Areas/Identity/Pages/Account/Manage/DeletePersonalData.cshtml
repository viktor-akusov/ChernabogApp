@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Удаление личных данных";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Удаление этих данных удалит ваш аккаунт, и это нельзя будет отменить.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating pb-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Пароль</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger pb-2" type="submit">Удалить данные и закрыть аккаунт</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
