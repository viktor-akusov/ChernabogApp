@model ChernabogApp.Pages.Characters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].CharClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Purporse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Magnificence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].RerollsMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Hunger)
