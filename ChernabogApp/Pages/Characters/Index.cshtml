            <th>
                @Html.DisplayNameFor(model => model.Character[0].Thirst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Strength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Dexterity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Constituiton)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Wisdom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Intellgence)
            </th>
