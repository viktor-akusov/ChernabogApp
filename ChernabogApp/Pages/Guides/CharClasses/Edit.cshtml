@page
@model ChernabogApp.Pages.Guides.CharClasses.EditModel

@{
    ViewData["Title"] = "Редактировать класс";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CharClass.Id" />
            <div class="form-group">
                <label asp-for="CharClass.Name" class="control-label"></label>
                <input asp-for="CharClass.Name" class="form-control" />
                <span asp-validation-for="CharClass.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CharClass.Description" class="control-label"></label>
                <textarea asp-for="CharClass.Description" class="form-control"></textarea>
                <span asp-validation-for="CharClass.Description" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-row justify-content-between pt-2 align-content-stretch">
                <a asp-page="./Index"><i class="btn btn-dark fa fa-arrow-left rounded-start" aria-hidden="true"></i></a>
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
