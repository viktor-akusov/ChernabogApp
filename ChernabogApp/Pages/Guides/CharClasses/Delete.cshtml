@page
@model ChernabogApp.Pages.Guides.CharClasses.DeleteModel

@{
    ViewData["Title"] = "Удалить класс";
}

<h1>Удалить класс "@Html.DisplayFor(model => model.CharClass.Name)"</h1>

<h3>Вы уверены, что хотите удалить этот класс?</h3>
<div>
    <hr />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CharClass.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.CharClass.Description)
        </dd>
    </dl>
    
    <form method="post" class="d-flex flex-row justify-content-between">
        <input type="hidden" asp-for="CharClass.Id" />
        <a asp-page="./Index"><i class="btn btn-dark fa fa-arrow-left rounded-start" aria-hidden="true"></i></a>
        <input type="submit" value="Удалить" class="btn btn-danger rounded-end" />
    </form>
</div>
