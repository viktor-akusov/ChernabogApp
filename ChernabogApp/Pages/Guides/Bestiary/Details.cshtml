@page
@model ChernabogApp.Pages.Guides.Bestiary.DetailsModel

@{
    ViewData["Title"] = "Существо - " + Model.Monster.DisplayName;
}

<div>
    <h4>Существо - @Model.Monster.DisplayName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Кость здоровья
        </dt>
        <dd class="col-sm-10">
            @Model.Monster.HitDice
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monster.ArmorClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monster.ArmorClass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monster.SaveRoll)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monster.SaveRoll)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monster.Skill)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monster.Skill)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monster.Motion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monster.Movement)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monster.BattleSpirit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monster.BattleSpirit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monster.Attack)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monster.Attack)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monster.Damage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monster.Damage)
        </dd>
        @if (Model.Monster.Category is not null)
        {
            <dt class="col-sm-2">
              <p class="btn btn-dark btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Описание категории >
              </p>
            </dt>
            <dd class="col-sm-10">
                <div class="collapse" id="collapseExample">
                    <div class="card card-body">
                        @Model.Monster.Category.Description
                    </div>
                </div>
            </dd>
        }
        @if (Model.Monster.Description is not null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Monster.Description)
            </dt>
            <dd class="col-sm-10">
                @Model.Monster.Description
            </dd>
        }
    </dl>
</div>
<div class="d-flex flex-row justify-content-left gap-2">
    <a asp-page="./Index">
        <i class="btn btn-dark fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Monster?.Id">
            <i class="btn btn-dark fa fa-edit" aria-hidden="true"></i>
        </a>
    }
</div>
