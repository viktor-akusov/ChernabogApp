@page
@model ChernabogApp.Pages.Guides.Bestiary.EditModel

@{
    ViewData["Title"] = "Редактировать существо \""+Model.Monster.DisplayName+"\"";
}

<h1>Редактировать существо "@Model.Monster.DisplayName"</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Monster.Id" />
            <div class="form-group">
                <label asp-for="Monster.Name" class="control-label"></label>
                <input asp-for="Monster.Name" class="form-control" />
                <span asp-validation-for="Monster.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.CategoryId" class="control-label"></label>
                <select asp-for="Monster.CategoryId" asp-items="Model.Categories" class="form-control">
                    <option value="">---</option>
                </select>
                <span asp-validation-for="Monster.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.MinimalHitDice" class="control-label"></label>
                <input asp-for="Monster.MinimalHitDice" class="form-control" />
                <span asp-validation-for="Monster.MinimalHitDice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.MaximalHitDice" class="control-label"></label>
                <input asp-for="Monster.MaximalHitDice" class="form-control" />
                <span asp-validation-for="Monster.MaximalHitDice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.ArmorClass" class="control-label"></label>
                <input asp-for="Monster.ArmorClass" class="form-control" />
                <span asp-validation-for="Monster.ArmorClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.SaveRoll" class="control-label"></label>
                <input asp-for="Monster.SaveRoll" class="form-control" />
                <span asp-validation-for="Monster.SaveRoll" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.Skill" class="control-label"></label>
                <input asp-for="Monster.Skill" class="form-control" />
                <span asp-validation-for="Monster.Skill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.Motion" class="control-label"></label>
                <input asp-for="Monster.Motion" class="form-control" />
                <span asp-validation-for="Monster.Motion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.Swim" class="control-label"></label>
                <input asp-for="Monster.Swim" class="form-control" />
                <span asp-validation-for="Monster.Swim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.Fly" class="control-label"></label>
                <input asp-for="Monster.Fly" class="form-control" />
                <span asp-validation-for="Monster.Fly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.Teleport" class="control-label"></label>
                <input asp-for="Monster.Teleport" class="form-control" />
                <span asp-validation-for="Monster.Teleport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.BattleSpirit" class="control-label"></label>
                <input asp-for="Monster.BattleSpirit" class="form-control" />
                <span asp-validation-for="Monster.BattleSpirit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.Attack" class="control-label"></label>
                <input asp-for="Monster.Attack" class="form-control" />
                <span asp-validation-for="Monster.Attack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.Damage" class="control-label"></label>
                <input asp-for="Monster.Damage" class="form-control" />
                <span asp-validation-for="Monster.Damage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monster.Description" class="control-label"></label>
                <textarea asp-for="Monster.Description" class="form-control"></textarea>
                <span asp-validation-for="Monster.Description" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-row justify-content-between pt-2 align-content-stretch">
                <a asp-page="./Index"><i class="btn btn-dark fa fa-arrow-left rounded-start" aria-hidden="true"></i></a>
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
