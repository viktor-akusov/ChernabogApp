@page
@model ChernabogApp.Pages.Guides.Races.DetailsModel

@{
    ViewData["Title"] = "Народ - " + Model.Race.Name.ToString();
}

<div>
    <h4>Народ - @Html.DisplayFor(model => model.Race.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Race.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Race.Description)
        </dd>
    </dl>
</div>
<div class="d-flex flex-row justify-content-left gap-2">
    <a asp-page="./Index">
        <i class="btn btn-dark fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Race?.Id">
            <i class="btn btn-dark fa fa-edit" aria-hidden="true"></i>
        </a>
    }
</div>
